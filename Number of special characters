
def count_special_characters(statement):
    special_chars = 0
    for char in statement:
        # Check if the character is a special character (not alphanumeric)
        if not char.isalnum():
            special_chars += 1
    return special_chars

# Sample input statement
given_statement = "Modi Birthday @ September 17, #&$% is the wishes code for him."

# Counting special characters
num_special_chars = count_special_characters(given_statement)

# Printing the result
print(f"Number of special characters: {num_special_chars}")
